@page "{id}"
@model MadOrderingssystem.Pages.MenuPage.DeletePizzaModel
@{
    ViewData["Title"] = "Pizza Delete";
    @using MadOrderingssystem.Models;
}

@if (Model.CustomerSession != null)
{
    @if (Model.CustomerSession.Role == Models.Roles.Management)
    {
        <div class="container">

            <h1 class="text-center"> Er du sikker på at slette Pizzaen?</h1>

            <form class="form-group" method="post">
                <label class="form-text">Navn</label>
                <input type="text" readonly class="form-control" asp-for="@Model.Pizza.ProductName" />
                <span asp-validation-for="@Model.Pizza.ProductName" class="text-danger"></span>

                <label class="form-text">Pris</label>
                <input type="text" readonly class="form-control" asp-for="@Model.Pizza.Price" />
                <span asp-validation-for="@Model.Pizza.Price" class="text-danger"></span>

                <label class="form-text">Id</label>
                <input type="text" readonly class="form-control" asp-for="@Model.Pizza.Id" />
                <span asp-validation-for="@Model.Pizza.Id" class="text-danger"></span>

                <div style="padding:1rem;"></div>
                <input type="submit" class="btn btn-danger float-right" value="Slet Pizza" placeholder="Delete" style="padding:1rem;" />
            </form>

            <div>
                <a asp-page="MenuTable">Tilbage til Menu listen</a>
            </div>
        </div>
    }
}
else
{
    <h1 class="text-center" style="font-family:'Times New Roman', Times, serif"> Du er ikke logget ind</h1>
    <div>
        <a asp-page="/Login/log_in">Login med din bruger</a>
    </div>
}

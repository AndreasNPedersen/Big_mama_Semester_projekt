@page
@model MadOrderingssystem.Pages.MenuPage.EditMenuModel
@{
    ViewData["Title"] = "Rediger Menu";
}
<div class="container">
    <form class="form-group" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <label class="form-text">Name</label>
        <input type="text" class="form-control" asp-for="@Model.Menu.ProductName" />
        <span asp-validation-for="@Model.Menu.ProductName" class="text-danger"></span>
        <label class="form-text">Pris</label>
        <input type="text" class="form-control" asp-for="@Model.Menu.Price" />
        <span asp-validation-for="@Model.Menu.Price" class="text-danger"></span>
        <label class="form-text">Id</label>
        <input type="text" class="form-control" asp-for="@Model.Menu.Id" />
        <span asp-validation-for="@Model.Menu.Id" class="text-danger"></span>

        <input type="submit" class="btn btn-success float-right" value="Rediger Menu" placeholder="Ændre" style="padding:1rem;" />
    </form>
    <div>
        <a asp-page="MenuTable">Tilbage til Menu listen</a>
    </div>

</div>

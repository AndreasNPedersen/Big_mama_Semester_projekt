@page
@model MadOrderingssystem.Pages.MenuPage.AddToppingsPageModel
@{
    ViewData["Title"] = "Tilføj topping";
}

<div class="container">
    @if (Model.CustomerSession != null)
    {
        @if (Model.CustomerSession.Role == Models.Roles.Management)
        {
            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label class="form-text">Navn</label>
                    <input asp-for="@Model.Toppings.ProductName" class="form-control" />
                    <span asp-validation-for="@Model.Toppings.ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-text">Pris</label>
                    <input asp-for="@Model.Toppings.Price" class="form-control" />
                    <span asp-validation-for="@Model.Toppings.Price" class="text-danger"></span>
                </div>



                <div style="padding:1rem;"></div>
                <div class="form-group">
                    <input type="submit" class="btn btn-success float-right" value="Tilføj toppingen" style="padding:1rem;" />
                </div>
            </form>
        }
    }
    else
    {
        <h1 class="text-center" style="font-family:'Times New Roman', Times, serif"> Du er ikke logget ind</h1>
        <div>
            <a class="text-center" asp-page="/Login/log_in">Login med din bruger</a>
        </div>
    }

</div>

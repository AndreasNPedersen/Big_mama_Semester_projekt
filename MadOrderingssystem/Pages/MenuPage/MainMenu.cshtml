@page
@model MadOrderingssystem.Pages.MenuPage.MainMenuModel
@{
    ViewData["Title"] = "Menu";
    @using MadOrderingssystem.Models;
}
      
<div>
    <div class="row">
        <div class="col-sm">
            One of three columns //filter
        </div>
        <div class="col-sm">
            <h3 class="text-center">Menuer</h3>
            @foreach (Menu menu in Model.DicMenu.Values)
            {
                <div class="card m-3">
                    <div class="card-header">
                        <p>Navn:@menu.ProductName</p>
                        <p>Pris:@menu.Price</p>
                        <p>ID: @menu.Id</p>
                        <div class="card-footer text-center">
                        </div>
                    </div>
                </div>
            }<h3 class="text-center">Pizzaer</h3>

            @foreach (Pizza pizza in Model.DicPizza.Values)
            {
                <div class="card m-3">
                    <div class="card-header">
                        <p>Navn:@pizza.ProductName</p>
                        <p>Pris:@pizza.Price</p>
                        <p>Ingredienser: @pizza.Ingrediense</p>
                        @foreach (Toppings topping in Model.DicToppings.Values)
                        {
                            <p>@topping.ProductName:</p>
                            <input type="checkbox" asp-for="@topping.IsSelsected" />
                            <p>for: @topping.Price DKK</p>
                        }
                        <div class="card-footer text-center">
                            <form method="post">
                                <input type="hidden" asp-for="@pizza.Id" />
                                <input type="hidden" asp-for="@pizza.Ingrediense" />
                                <input type="hidden" asp-for="@pizza.IsSelsected" />
                                <input type="hidden" asp-for="@pizza.Price" />
                                <input type="hidden" asp-for="@pizza.ProductName" />
                                <input type="hidden" asp-for="@pizza.Size" />
                                <input type="hidden" asp-for="@pizza.Topping" />
                            </form>
                            <button type="submit" asp-page-handler="Basket">Køb</button>
                        </div>
                    </div>
                </div>
            } <h3 class="text-center">Tilbehør & Drinks</h3>
            @foreach (Accessory accessory in Model.DicAccessories.Values)
            {
                <div class="card m-3">
                    <div class="card-header">
                        <p>Navn:@accessory.ProductName</p>
                        <p>Pris:@accessory.Price</p>
                        <div class="card-footer text-center">
                            <form>
                                <button type="submit" class="btn-success" asp-page-handler="buy" asp-route-id="@accessory.Id">Køb</button>
                            </form>
                        </div>
                    </div>
                </div>
            }

        </div>//Menu
        <div class="col-sm">
            <h3 class="text-center">Indkøbskurv</h3>
            @if (Model.Basket != null)
            {
            @foreach (Product product in Model.Basket)
            {
                <ul>
                    <li>Navn: @product.ProductName</li>
                    <li>Pris: @product.Price</li>
                </ul>
                <br />
            }}
        </div>
    </div>
</div>


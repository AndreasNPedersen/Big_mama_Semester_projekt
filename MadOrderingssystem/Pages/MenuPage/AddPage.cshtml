@page
@model MadOrderingssystem.Pages.MenuPage.AddPageModel
@{
    ViewData["Title"] = "Add Menu";
}

<div class="container"
    <form class="form-group" method="post">
        <h4 style="color:blue"> Opret nyt produkt</h4>
        <label class="form-text">Produkt navn</label>
        <input type="text" class="form-control" asp-for="@Model.Product.ProductName" />
        <span asp-validation-for="@Model.Product.ProductName" class="text-danger"></span>
        <label class="form-text">Pris</label>
        <input type="text" class="form-control" asp-for="@Model.Product.Price" />
        <span asp-validation-for="@Model.Product.Price" class="text-danger"></span>

        <div style="padding:1rem;"></div>
        <input type="submit" class="btn btn-success float-right" value="Opret Produkt" placeholder="ProduktOpret" style="padding:1rem;" />
    </form> 
</div>
    
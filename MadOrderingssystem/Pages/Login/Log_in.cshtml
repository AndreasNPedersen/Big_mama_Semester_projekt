@page
@model MadOrderingssystem.Pages.Login.log_inModel
@{
    ViewData["Title"] = "Login";
}

@if (Model.CustomerSession != null)
{
    @if (Model.CustomerSession.Role == Models.Roles.Management)
    {
        <div class="container">
            <form class="form-group" method="post">
                <label class="form-text">Email</label>
                <input type="text" class="form-control" asp-for="@Model.Email" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                <label class="form-text">Password</label>
                <input type="text" class="form-control" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                <div style="padding:1rem;"></div>
                <input type="submit" class="btn btn-success float-right" value="Login" placeholder="Login" style="padding:1rem;" />
            </form>

        </div>
    }
}
else
{
    <h1 class="text-center" style="font-family:'Times New Roman', Times, serif"> Du er ikke logget ind</h1>
    <div>
        <a asp-page="/Login/log_in">Login med din bruger</a>
    </div>
}
